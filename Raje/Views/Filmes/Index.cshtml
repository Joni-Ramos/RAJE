@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@using Raje.Utility

@if (!SignInManager.IsSignedIn(User))
{
    <script>window.location.href = '/Identity/Account/Login';</script>
}

@model IEnumerable<Raje.Models.Filme>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="text-center">
        <form enctype="multipart/form-data" asp-controller="Home" asp-action="Index" method="post">
            <table>
                <tr>
                    <th>
                        <div class="form-group">
                            <a style="width: 15vh" asp-action="Upsert" class="btn btn-success">Novo Filme</a>
                        </div>
                    </th>
                    <th>&nbsp;&nbsp;&nbsp;</th>
                    <th>
                        <div class="form-group">
                            <input style="width: 20vh" type="text" id="nome" name="nome" placeholder="Pesquisar" class="form-control" />
                        </div>
                    </th>
                    <th>&nbsp;</th>
                    <th>
                        <div class="form-group">
                            <button style="width: 12vh" id="Pesquisar" class="btn btn-primary">Pesquisar</button>
                        </div>
                    </th>
                </tr>
            </table>
        </form>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.Titulo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Diretor)
                    </th>
                    <th>
                        Origem
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ano)
                    </th>

                    @if (User.IsInRole(WC.AdminRole))
                    {
                        <th>
                            @Html.DisplayNameFor(model => model.Ativo)
                        </th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr onclick="window.location.href = '/Filmes/Details/@item.Id'">
                        <td>
                            <img src="~/images/@item.ImagemURL" alt="@item.ImagemURL" style="width: 70px; height: 100px" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Titulo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Diretor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pais)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ano)
                        </td>

                        @if (User.IsInRole(WC.AdminRole))
                        {
                            <td>
                                @Html.DisplayFor(modelItem => item.Ativo)
                            </td>
                        }

                        @if (User.IsInRole(WC.AdminRole))
                        {
                            <td>
                                <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-info">Editar</a>
                            </td>

                            <td>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
                            </td>
                        }
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
