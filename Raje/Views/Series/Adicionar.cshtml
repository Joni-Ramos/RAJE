@model Raje.Models.Serie

@{
    ViewData["Title"] = "Adicionar";
}

<h4>Série</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Adicionar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label">Título</label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diretor" class="control-label">Diretor(es)</label>
                <input asp-for="Diretor" class="form-control" />
                <span asp-validation-for="Diretor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Elenco" class="control-label"></label>
                <input asp-for="Elenco" class="form-control" />
                <span asp-validation-for="Elenco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pais" class="control-label">País</label>
                <input asp-for="Pais" class="form-control" />
                <span asp-validation-for="Pais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anos" class="control-label">Ano</label>
                <input asp-for="Anos" class="form-control" />
                <span asp-validation-for="Anos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroTemporadas" class="control-label">Número de Temporadas</label>
                <input asp-for="NumeroTemporadas" class="form-control" />
                <span asp-validation-for="NumeroTemporadas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
