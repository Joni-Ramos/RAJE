@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@using Raje.Utility

@model IEnumerable<Raje.Models.Serie>

@{
    ViewData["Title"] = "Index";
}

@if (!SignInManager.IsSignedIn(User))
{
    <script>window.location.href = '/Identity/Account/Login';</script>
}

<p>
    <a asp-action="Adicionar" class="btn btn-success">Adicionar Série</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diretor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Elenco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroTemporadas)
            </th>

            @if (User.IsInRole(WC.AdminRole))
            {
                <th>
                    @Html.DisplayNameFor(model => model.Ativo)
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <img src="~/images/@item.ImagemURL" alt="@item.ImagemURL" style="width: 70px; height: 100px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diretor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Elenco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ano)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroTemporadas)
            </td>

            @if (User.IsInRole(WC.AdminRole))
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
            }

            <td>
                <a asp-action="List" asp-route-id="@item.Id" class="btn btn-primary">Ver</a>
            </td>

            @if (User.IsInRole(WC.AdminRole))
            {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Editar</a>
                </td>

                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
                </td>
            }
        </tr>
        }
    </tbody>
</table>
