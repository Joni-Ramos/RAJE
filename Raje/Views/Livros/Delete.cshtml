@model Raje.Models.Livro

<form method="post">
    <input asp-for="Id" hidden />
    <br />
    <br />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Excluir Livro</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Titulo"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Titulo" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Autores"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Autores" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Pais"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Pais" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Ano"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Ano" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Sinopse"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Sinopse" disabled class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4 row">
                    <div class="col">
                        <button type="submit" class="btn btn-danger w-100">Excluir</button>
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250,
                disable:true
            });
        });

    </script>
}