@model Raje.Models.ApplicationUser

<form method="post">
    <input asp-for="Id" hidden />
    <br />
    <br />
    <div class="border p-3">
        <div class="row">
            <div class="col-lg-2">
                <img src="~/images/@Model.ImagemURL" alt="@Model.ImagemURL" style="width: 150px; height: 200px" />
                <p>&nbsp;</p>
            </div>
            <div class="col-lg-3">
                <h4>@Model.FullName</h4>
                <font size="2">
                    <p align=justify>
                        <b>Aniversário:</b> @Model.Birthdate<br>
                        <b>Cidade:</b> @Model.City<br>
                        <b>Estado:</b> @Model.State<br>
                    </p>
                </font>
                <p></p>
                <a asp-controller="Home" asp-action="Index" class="btn btn-success"><i class="fas fa-sign-out-alt"></i> Voltar</a>
                <p></p>
                <a asp-action="Upsert" asp-route-id="@Model.Id" class="btn btn-info">Adicionar</a>
                <p>&nbsp;</p>
            </div>
            <div class="border-left p-3 col-lg-7">
                <center><h4 class="text-info pl-3">Amigos</h4></center>
                 <p></p>
                <a asp-action="Upsert" asp-route-id="@Model.Id">Ver Mais</a>
            </div>
        </div>
    </div>
    <div class="border p-3">
        <div class="row">
            <div class="col-lg-6">
                <p>&nbsp;</p>
                <center><h2 class="text-info pl-3">Comentários</h2></center>
                <p>&nbsp;</p>
                <br />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250,
                disable: true
            });
        });
    </script>
}